<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediumActivity">

    <LinearLayout
        android:id="@+id/TopOptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button

            android:id="@+id/UserID"
            style="@style/clickButton"
            android:text="UserID" />

        <Button
            android:id="@+id/Score"
            style="@style/clickButton"
            />

        <Button
            android:id="@+id/Timer"
            style="@style/clickButton"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/BottomOptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/Pause"
            style="@style/clickButton"
            android:text="Pause"
            android:onClick="pauseGame"/>

        <Button
            android:id="@+id/Home"
            style="@style/clickButton"
            android:onClick="switchToHome"
            android:text="Home" />
    </LinearLayout>

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/light_grid"
        app:layout_constraintBottom_toTopOf="@+id/BottomOptions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopOptions"
        android:columnCount="2"
        android:rowCount="2">

        <Button
            style="@style/gridButton"
            android:onClick="onLightClick" />

        <Button
            style="@style/gridButton"
            android:onClick="onLightClick" />

        <Button
            style="@style/gridButton"
            android:onClick="onLightClick"
            />

        <Button
            style="@style/gridButton"
            android:onClick="onLightClick"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>